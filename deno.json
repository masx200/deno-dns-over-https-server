{
    "nodeModulesDir": "auto",
    "tasks": {
        "build": "cd static && npx -y cnpm install && npm run build && cd ../ ",
        "fmt": "deno fmt --config deno.json",
        "lint": "deno lint --config deno.json",
        "dev": "deno run -A --allow-net=:8000 ./main.tsx",
        "check": "deno check ./main.tsx"
    },
    "importMap": "import_map.json",
    "fmt": {
        "options": {
            "indentWidth": 4,
            "singleQuote": false
        }
    }
}
